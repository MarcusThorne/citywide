<!-- Header with image caorusel -->
<div class="h-screen overflow-hidden -mt-36 relative">
  <% @slides.each_with_index do |s, i| %>
    <div class="slide hidden space-y-6 relative">
      <div class="bg-black"><%= image_tag "building#{i+1}.jpg", class:"opacity-60" %></div>
      <div class="absolute top-1/3 left-1/3" style="transform: translate(-50%, -50%);">
        <h1 class="text-9xl text-white mb-8"><%= s %><i class="fas fa-circle text-yellow-300 text-sm ml-2"></i></h1>
        <p class="text-xl text-white">As a general contractor, we first create the highest level of trust and itegrity with our <br> clients. We value our role in the success of your project.</p>
      </div>
    </div>
  <% end %>
</div>
